<div class="container mt-5">
    <div class="row">

        <div class="col-6 col-sm-4 col-lg-4">
            <div class="card single-product-card">
                <div class="card-body p-3">
                    <!-- Product Thumbnail -->
                    <a class="product-thumbnail d-block" href="#!">
                        <img src="../images/diet-images/{{diets.diet._id}}.png" class="mb-3" width="50%" alt="">
                        <!-- Badge -->
                    </a>
                    <!-- Product Title -->
                    <a class="product-title d-block text-truncate" href="#!">{{diets.diet.dietsname}}</a>
                    <!-- Product Price -->
                    <p class="sale-price">Rs.{{diets.diet.Price}}/- </p>
                    <p>{{diets.diet.desc}}</p>
                    <hr>

                    <p class="mb-0">For Age : {{diets.diet.dage}}</p>
                    <p>For Weight : {{diets.diet.dweight}}</p>






                </div>
            </div>

        </div>

        <div class="col-lg-6">
            <div class="card single-product-card">
                <div class="card-body p-4">
                    <h4>Video Link : </h4> <br>
                    <p><a href="{{diets.diet.vlink}}" class="btn btn-dark" target="_blank">Video</a></p>
                    <br>
                    <hr>
                    <h4>Diet Plan : </h4> <br>
                    <p>{{diets.diet.dietplan}}</p>
                    <br>
                    <hr>
                    <h4>Diet Description : </h4> <br>
                    <p>{{diets.diet.desc}}</p>
                </div>
            </div>

        </div>
    </div>
</div>