<div class="page-content-wrapper main-content mt-5">
    <div class="container-md">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Content</h4>
            <a href="/expert/add-content" class="btn btn-dark">+ Add New Content</a>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="w-100" id="dataTable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Thumnile</th>
                                <th>Title</th>
                                <th>Video Link</th>

                                <th>Description</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each contents}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td><img src="/images/content-images/{{this._id}}.png" alt="" style="width: 5rem">
                                </td>
                                <td>{{this.name}}</td>
                                <td>{{this.link}}</td>
                                <td>{{this.desc}}</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        {{!-- <a href="/expert/edit-content/{{this._id}}" class="btn btn-dark btn-sm"><i
                                                class="bi bi-pen"></i></a> --}}
                                        <a href="/expert/delete-content/{{this._id}}" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function deleteContent(id, wname) {
        Swal.fire({
            title: `Are you sure you want to delete "${wname}"?`,
            text: '',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#33ff68',
            cancelButtonColor: '#d29eee',
            confirmButtonText: 'Yes!',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the delete route if confirmed
                window.location.href = `/expert/delete-content/${id}`;
            }
        });
    }
</script>